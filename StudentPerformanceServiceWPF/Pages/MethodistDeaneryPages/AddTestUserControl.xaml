        <Label Content="Выберите сессию:" FontSize="16" HorizontalAlignment="Left" Margin="283,217,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="sessionComboBox" HorizontalAlignment="Left" FontSize="16" Height="30" Margin="431,217,0,0" VerticalAlignment="Top" Width="215" />
        <Label x:Name="msgLabel" FontSize="16" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="10,280,10,0" VerticalAlignment="Top" Width="835"/>
        <Button x:Name="addButton" Content="Добавить" FontSize="16" Background="Green" Foreground="White" Cursor="Hand" HorizontalAlignment="Center"
            Margin="368,327,351,0" VerticalAlignment="Top" Width="136" Height="44" Click="AddButton_Click"/>

    </Grid>
</UserControl>
