        <Label FontSize="14pt" Content="Логин:" HorizontalAlignment="Left" Margin="52,148,0,0" VerticalAlignment="Top"/>
        <Label FontSize="14pt" Content="Пароль:" HorizontalAlignment="Left" Margin="40,204,0,0" VerticalAlignment="Top"/>
